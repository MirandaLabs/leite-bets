# N8N Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123
N8N_PORT=5678

# Scraper Configuration
BET365_URL=https://www.bet365.com
SCRAPER_DELAY=2000

# API Configuration
# URL for the backend API (auto-detected in Docker, use http://localhost:8000/api/odds/scraper for local dev)
API_URL=http://api:8000/api/odds/scraper
API_BASE_URL=http://betting-bot-api:8000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# ========================================
# Proxy Configuration
# ========================================

# Modo de Proxy: "rotating" (recomendado) ou "static"
PROXY_MODE=rotating

# --- MODO ROTATIVO (Webshare Residential Proxies) ---
# Obtenha suas credenciais em: https://www.webshare.io/
WEBSHARE_PROXY_USERNAME=seu_usuario_webshare
WEBSHARE_PROXY_PASSWORD=sua_senha_webshare

# Servidor Webshare (padrão: p.webshare.io)
WEBSHARE_PROXY_SERVER=p.webshare.io
WEBSHARE_PROXY_PORT=80

# Sticky Sessions: manter mesmo IP por scraper (true/false)
PROXY_STICKY_SESSION=true

# --- MODO ESTÁTICO (IPs Próprios) ---
# Use quando PROXY_MODE=static
# IP_1=192.168.1.1:8080
# IP_2=192.168.1.2:8080
# IP_3=192.168.1.3:8080
# IP_4=192.168.1.4:8080
# IP_5=192.168.1.5:8080
# IP_6=192.168.1.6:8080
# IP_7=192.168.1.7:8080
# IP_8=192.168.1.8:8080
# IP_9=192.168.1.9:8080
# IP_10=192.168.1.10:8080

# Porta padrão para proxies estáticos (se IP não incluir porta)
# PROXY_PORT=80

# Autenticação para proxies estáticos (opcional)
# PROXY_USERNAME=usuario
# PROXY_PASSWORD=senha

# Desabilitar proxies completamente (true/false)
DISABLE_PROXY=false